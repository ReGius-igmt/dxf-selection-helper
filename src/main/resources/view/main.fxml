<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.regiuss.dxf.selection.helper.controller.MainController">
